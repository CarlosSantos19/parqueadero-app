# Variables para Railway deployment
# Database (Railway provides MongoDB service)
MONGODB_URI=mongodb://localhost:27017/parqueadero
DB_NAME=parqueadero

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=production

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# OCR Configuration
TESSERACT_LANG=spa
TESSERACT_PSM=8

# CORS (Railway will provide the domain)
ALLOWED_ORIGINS=https://your-railway-frontend-url.railway.app

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100